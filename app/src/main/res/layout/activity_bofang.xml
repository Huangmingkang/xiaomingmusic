<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/aab"
    tools:context="com.example.qiangshengzhineng.xiaomingmusic.BofangActivity">

    <ImageView
        android:id="@+id/imageView_fanhui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/fanhui"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp" />

    <ImageView
        android:id="@+id/imageView_fengmian"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/bofang"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView_bofanggemiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="歌名"
        android:textColor="@color/bai"
        android:layout_alignTop="@+id/imageView_fanhui"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="34dp"
        android:layout_below="@+id/imageView_fengmian"
        android:layout_alignStart="@+id/imageView_fanhui"
        android:layout_marginStart="14dp" />

    <ImageView
        android:id="@+id/imageView_moshi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/imageView_fanhui"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:src="@mipmap/moshi" />

    <ImageView
        android:id="@+id/imageView_shangyishou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_rew"

        android:layout_alignTop="@+id/imageView_bofangxiayishou"
        android:layout_alignStart="@+id/imageView_fengmian" />

    <ImageView
        android:id="@+id/imageView_baofangbaofang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dabofang"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView_bofangxiayishou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@android:drawable/ic_media_ff"

        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/imageView_baofangbaofang"
        android:layout_alignEnd="@+id/imageView_fengmian" />

    <TextView
        android:id="@+id/textView_dangqiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/seekBar"
        android:text="00.00"
        android:textColor="@color/bai"/>

    <TextView
        android:id="@+id/textView_zhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/seekBar"
        android:layout_below="@+id/seekBar"
        android:text="00.00"
        android:textColor="@color/bai"/>


</RelativeLayout>
